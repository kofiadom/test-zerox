{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",          // use CommonJS for Node.js
    "moduleResolution": "Node",    // resolve Node-style imports
    "esModuleInterop": true,       // allow default import syntax
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"]              // include Node.js types
  }
}
